<h1>User Posts:</h1>

{{#if noPost}}
    <p>No Posts Yet! <a href="localhost/3000/create">Create one now!</a></p>
{{/if}}
{{#each posts}}
    <h1>{{postTitle}}</h1>
    <h2>{{author}}</h2>
    <h3>{{movieTitle}}</h3>
    <h4>{{genre}}</h4>
    {{#if_eq type 0}}
        <p>{{content}}</p>
    {{/if_eq}}

    {{#if_eq type 1}}
    <img src="{{content}}">
    {{/if_eq}}

    {{#if_eq type 2}}
        {{content}}
    {{/if_eq}}   
{{/each}}

