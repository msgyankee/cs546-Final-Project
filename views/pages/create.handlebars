<div class = "create_style">
    <h2> Create a Post! </h2>
<form id="create-form" method="POST" action="/create">
    
    <label for="postTitle">Title:</label>
    <input type="text" name="postTitle" id="postTitle" required>
    
    <label for="movieTitle">Movie Title:</label>
    <input type="text" name="movieTitle" id="movieTitle" required>
    
    <label for="genre">Genre:</label> 
    <input type="text" name="genre" id="genre" required>
    
    <select name ="type" id="type_form">
        <option value="select">Select a Post Type...</option>
        <option value="0">Text</option>   
        <option value="1">Image</option>  
        <option value="2">Video</option>  
    </select>
    
    <span id="expand">

    </span>

    <button type="Submit" value="Submit" id="button">Submit</button>
    
    {{#if reqFields}}
        <p class="error">Please fill out all fields!</p>
    {{/if}}
</form>
</div>

<script src="/public/js/site.js"></script>